{
  "extends": "oclif",
  "plugins": ["mocha"],
  "env": {
    "mocha": true
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "mocha/no-exclusive-tests": "error",
    "node/no-extraneous-require": [
      "error",
      {
        "allowModules": ["lodash", "request", "q"]
      }
    ]
  }
}
