#!/bin/bash

# Replace the placeholders with your actual Twilio account credentials and the account SID
account_sid=""
auth_token=" "

# Get all messages from the account
messages=$(curl -X GET -s -u $account_sid:$auth_token "https://api.twilio.com/2010-04-01/Accounts/$account_sid/Messages.json" | jq -r '.messages[] | .sid')

# Iterate over the messages and delete each one
 message_sid  $messages
    curl -X DELETE -s -u $account_sid:$auth_token "https://api.twilio.com/2010-04-01/Accounts/$account_sid/Messages/$message_sid.json"

